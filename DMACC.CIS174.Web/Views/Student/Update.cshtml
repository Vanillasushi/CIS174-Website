@model DMACC.CIS174.Web.Models.UpdateStudentModel

<script src="~/Scripts/DMACC/student.js" type="text/javascript"></script>

<h2>Update Student</h2>

<div class="row">
    <div class="col-md-3">
        <label>Search Name</label>
    </div>
    <div class="col-md-7">
        <input id="searchString" type="text" class="form-control"/>
    </div>
    <div class="col-md-2">
        <button class="btn btn-dark" onclick="searchStudent()">Search</button>
    </div>
</div>

<hr/>

<div id="successMessage" class="hidden alert alert-success">
    Successfully Updated!
</div>
<div id="errorMessage" class="hidden alert alert-danger">
    Error Occurred!
</div>

<input id="studentId" type="hidden"/>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Student Name:</label>
    </div>
    <div class="col-md-6">
        <input id="studentName" type="text" class="form-control"/>
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Height:</label>
    </div>
    <div class="col-md-6">
        <input id="studentHeight" type="text" class="form-control"/>
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Weight:</label>
    </div>
    <div class="col-md-6">
        <input id="studentWeight" type="text" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <button class="btn btn-secondary margin-top-md margin-left-md" onclick="updateStudent()">Save</button>
</div>
